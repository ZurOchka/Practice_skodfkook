<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADAEFD"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-5dp"
    tools:layout_editor_absoluteY="0dp">

    <View
        android:id="@+id/v4"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#6E70E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v3" />

    <EditText
        android:id="@+id/pass4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/v4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img4"
        app:layout_constraintTop_toBottomOf="@+id/login4" />

    <Button
        android:id="@+id/ed4"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="95dp"
        android:text="@string/edit"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintStart_toStartOf="@id/v4"
        app:layout_constraintTop_toBottomOf="@id/pass4" />

    <Button
        android:id="@+id/del4"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#CD0000"
        android:contentDescription="delete buttton"
        android:gravity="center_horizontal"
        app:icon="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="@id/v4"
        app:layout_constraintStart_toEndOf="@id/ed4"
        app:layout_constraintTop_toBottomOf="@id/pass4" />

    <EditText
        android:id="@+id/login4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:ems="10"
        android:hint="@string/login"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/v4"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toEndOf="@id/img4"
        app:layout_constraintTop_toTopOf="@id/v4" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="71dp"
        android:layout_height="76dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/v4"
        app:layout_constraintTop_toTopOf="@+id/v4"
        app:srcCompat="@drawable/ic_launcher_background" />

    <View
        android:id="@+id/v3"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#6E70E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v2" />

    <EditText
        android:id="@+id/login3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:backgroundTintMode="add"
        android:ems="10"
        android:hint="@string/login"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/v3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img3"
        app:layout_constraintTop_toTopOf="@id/v3" />

    <EditText
        android:id="@+id/pass3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/v3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img3"
        app:layout_constraintTop_toBottomOf="@+id/login3" />

    <Button
        android:id="@+id/del3"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#CD0000"
        android:contentDescription="delete buttton"
        android:gravity="center_horizontal"
        app:icon="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="@id/v3"
        app:layout_constraintStart_toEndOf="@id/ed3"
        app:layout_constraintTop_toBottomOf="@id/pass3" />

    <Button
        android:id="@+id/ed3"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="95dp"
        android:text="@string/edit"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintStart_toStartOf="@id/v3"
        app:layout_constraintTop_toBottomOf="@id/pass3" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="71dp"
        android:layout_height="76dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/v3"
        app:layout_constraintTop_toTopOf="@+id/v3"
        app:srcCompat="@drawable/ic_launcher_background" />

    <View
        android:id="@+id/v2"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#6E70E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1" />

    <EditText
        android:id="@+id/login2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:ems="10"
        android:hint="@string/login"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img2"
        app:layout_constraintTop_toTopOf="@id/v2" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintTop_toBottomOf="@+id/login2" />

    <Button
        android:id="@+id/del2"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#CD0000"
        android:contentDescription="delete buttton"
        android:gravity="center_horizontal"
        app:icon="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintStart_toEndOf="@+id/ed2"
        app:layout_constraintTop_toBottomOf="@+id/pass2" />

    <Button
        android:id="@+id/ed2"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="95dp"
        android:text="@string/edit"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@+id/pass2" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="71dp"
        android:layout_height="76dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/v2"
        app:layout_constraintTop_toTopOf="@+id/v2"
        app:srcCompat="@drawable/ic_launcher_background" />

    <View
        android:id="@+id/v1"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#6E70E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="71dp"
        android:layout_height="76dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/v1"
        app:layout_constraintTop_toTopOf="@+id/v1"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/login1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:background="#000000"
        android:backgroundTint="#8F91FD"
        android:ems="10"
